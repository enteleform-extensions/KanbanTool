kt-board

	//###  Item  ###//
	.kt-interactive_checklists-checklist li label
		margin-right:  13px  !important

	//###  Item.URL  ###//
	kt-task > .kt-task-footer > ul > li > label > a
		color:        #444  !important
		font-weight:  bold  !important
