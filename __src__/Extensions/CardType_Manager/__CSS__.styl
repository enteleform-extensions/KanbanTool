//#####################//
//###  FunctionBar  ###//
//#####################//

.{FunctionBar-container}

	.cell.filter.active,
	.cell.filter.inactive
		--filterColor:  #000
		padding-top:    14px
		color:          #666
		box-shadow:
			inset 0 7px 0 0 var(--filterColor),
			inset 0 8px 0 0 #AAA \
			!important

	.cell.filter.inactive
		background:  #AAA
		color:       #777
		box-shadow:
			inset 0 10px 15px -2px #0003,
			inset 0 7px 0 0 var(--filterColor),
			inset 0 8px 0 0 #AAA \
			!important


//###################################//
//###  Board.Cards & Board.Cards  ###//
//###################################//

kt-board kt-task, // CardFace
{FunctionBar-container} .cell.filter
		--title_BorderWidth:                5px
		--title_Default_BorderAccentWidth:  5px
		--title_BorderAccentWidth:          0px
		--title_BorderAccentColor:          #0000
		--title_BorderColor:                #0000
		--title_BackgroundColor:            #0000
		--title_ForegroundColor:            #444

		&.borderAccent_Enabled
			--title_BorderAccentWidth:  var(--title_Default_BorderAccentWidth)

kt-board kt-task .kt-task-body, // CardFace.Title
{FunctionBar-container} .cell.filter
		margin:            5px                                                     !important
		padding:           7px 7px 4px calc(7px + var(--title_BorderAccentWidth))  !important
		border-radius:     3px                                                     !important
		background-color:  var(--title_BackgroundColor)                            !important
		color:             var(--title_ForegroundColor)                            !important
		border:            none                                                    !important
		box-shadow:
			calc(0px - var(--title_BorderWidth)) 0 0 0 var(--title_BorderAccentColor),
			inset var(--title_BorderAccentWidth) 0 0 0 var(--title_BorderAccentColor),
			0 0 0 var(--title_BorderWidth) var(--title_BorderColor),
			inset calc(var(--title_BorderAccentWidth) + 1px) 0 0 0 #0004,
			inset calc(var(--title_BorderAccentWidth) + 3px) 0 0 0 #0002,
			0 0 0 calc(var(--title_BorderWidth) + 1px) #888,
			inset 0 0 0 1px #0004 \
			!important


//#####################//
//###  Board.Cards  ###//
//#####################//

kt-board

	//###  CardFace  ###//
	kt-task
		border-radius:  4px      !important
		background:     #EAEAEA  !important
		color:          #333     !important
		box-shadow:
			inset 0 0 0 1px #C3C3C3,
			1px 1px 3px 0 #0002 \
			!important

		//###  Title  ###//
		.kt-task-body
			margin:            5px                                                     !important
			padding:           7px 7px 4px calc(7px + var(--title_BorderAccentWidth))  !important
			border-radius:     3px                                                     !important
			background-color:  var(--title_BackgroundColor)                            !important
			color:             var(--title_ForegroundColor)                            !important
			box-shadow:
				calc(0px - var(--title_BorderWidth)) 0 0 0 var(--title_BorderAccentColor),
				inset var(--title_BorderAccentWidth) 0 0 0 var(--title_BorderAccentColor),
				0 0 0 var(--title_BorderWidth) var(--title_BorderColor) \
				!important

		//###  Header  ###//
		.kt-task-header
			display:  none  !important


//############################//
//###  CardFace.CheckList  ###//
//############################//

kt-board

	//###  Item  ###//
	.kt-interactive_checklists-checklist li label
		margin-right:  13px  !important

	//###  Item.URL  ###//
	kt-task > .kt-task-footer > ul > li > label > a
		color:        #444  !important
		font-weight:  bold  !important
