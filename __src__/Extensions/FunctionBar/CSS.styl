//################//

.{root}
	position:        fixed
	display:         flex
	flex-direction:  column
	z-index:         10
	background:      #444

	&.{leftBar  }{left:    0}
	&.{rightBar }{right:   0}
	&.{topBar   }{top:     0}
	&.{bottomBar}{bottom:  0}

	&.{leftBar}, &.{rightBar}
		top:     0
		height:  100%

		.{legendRow}
			flex-direction:  column

			.{legendCell}
				flex-grow:   unset
				text-align:  left

	&.{topBar}, &.{bottomBar}
		width:  100%

		.{legendRow}
			flex-direction:  row

			.{legendCell}
				flex-grow:   1
				text-align:  center

	.{legendRow}
		display:  flex

		.{legendCell}
			padding:           2px
			user-select:       none
			cursor:            pointer
			background-color:  #444
			color:             #EEE
			border:            1px solid #D4D4D4
			box-shadow:        0 -1px 1px rgba(0,0,0,0.065)
