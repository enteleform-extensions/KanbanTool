.overlay
	display:         flex
	flex-direction:  column
	position:        fixed
	top:             0
	left:            0
	width:           100%
	height:          100%
	// z-index:         1000

	.top
		background:  #F77
	.center
		display:          flex
		justify-content:  space-between
		flex-direction:   row
		flex-grow:  1
		.left
			background:  #7F7
		.right
			background:  #77F
	.bottom
		background:  #F7F

	.left, .right
		display:          flex
		flex-direction:   row

		.column
			display:         flex
			flex-direction:  column

			.cell
				text-align:  left

	.top, .bottom
		display:         flex
		flex-direction:  column

		.row
			display:          flex
			flex-direction:   row
			justify-content:  center

			.cell
				text-align:  center


.cell
	width:    100px
	border:   1px solid black
	padding:  5px



