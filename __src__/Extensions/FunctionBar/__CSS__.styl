//##############//
//###  Core  ###//
//##############//

.{container}

	--BorderColor:         #ABABB1
	--ExpandButton_Color:  #6A6A6A

	display:         flex
	flex-direction:  column
	position:        fixed
	top:             0
	left:            0
	width:           100%
	height:          100%
	z-index:         1000
	pointer-events:  none

	.left, .right, .top, .bottom
		display:         flex
		pointer-events:  auto
		background:      #C6C6CC

	.left
		border-right:   1px solid var(--BorderColor)
	.right
		border-left:    1px solid var(--BorderColor)
	.top
		border-bottom:  1px solid var(--BorderColor)
	.bottom
		border-top:     1px solid var(--BorderColor)

	.center
		display:          flex
		justify-content:  space-between
		flex-direction:   row
		flex-grow:        1

		.left, .right
			display:          flex
			flex-direction:   row

			.column
				display:         flex
				flex-direction:  column

				.cell
					text-align:  left

	.top, .bottom
		display:         flex
		flex-direction:  column

		.row
			display:          flex
			flex-direction:   row
			justify-content:  center
			margin:           auto

			.cell
				text-align:   center
				white-space:  nowrap

			&.stretch
				margin:  0

				.cell
					flex:  1

	.cell
		flex:         0
		min-width:    fit-content
		min-height:   fit-content
		padding:      5px
		overflow:     hidden
		cursor:       pointer
		border:       1px solid var(--BorderColor)
		background:   #D9D9DE
		color:        #505052

//################################//
//###  Core: Collapse Toggles  ###//
//################################//

.{container}

	.left, .right, .top, .bottom
		&.empty,
		&.collapsed > :not(.expand-button),
		&:not(.collapsed) > .expand-button
			display:  none

	.left, .right
		.column.expand-button > .cell
			display:          flex
			flex:             1
			flex-direction:   column
			justify-content:  center
			padding:          0 2px 0 1px
			font-size:        15pt
			color:            var(--ExpandButton_Color)

	.top, .bottom
		.row.expand-button > .cell
			padding:      0 0 2px 0
			line-height:  18px
			font-size:    14pt
			color:        var(--ExpandButton_Color)


//#################################################//
//###  Extension: CardType_Manager.FunctionBar  ###//
//#################################################//

.{container}

	.cell.activeFilter,
	.cell.inactiveFilter
		--filterColor:  #000
		padding-top:    14px
		color:          #666
		box-shadow:     inset 0 7px 0 0 var(--filterColor), inset 0 8px 0 0 #AAA

	.cell.inactiveFilter
		background:  #AAA
		color:       #777
		box-shadow:  inset 0 10px 15px -2px #00000033, inset 0 7px 0 0 var(--filterColor), inset 0 8px 0 0 #AAA


//###########################################//
//###  Extension: CardType_Manager.Cards  ###//
//###########################################//

kt-board

	//###  CardFace  ###//
	kt-task
		--title_BorderWidth:                5px
		--title_Default_BorderAccentWidth:  5px
		--title_BorderAccentWidth:          0px
		--title_BorderAccentColor:          #00000000
		--title_BorderColor:                #00000000
		--title_BackgroundColor:            #00000000
		--title_ForegroundColor:            #444

		background:     #EAEAEA  !important
		color:          #333     !important
		border-radius:  4px      !important
		box-shadow:
			inset 0 0 0 1px #C3C3C3,
			1px 1px 3px 0 #00000022 !important

		//###  Title  ###//
		.kt-task-body
			margin:            5px                                                     !important
			padding:           7px 7px 4px calc(7px + var(--title_BorderAccentWidth))  !important
			border-radius:     3px                                                     !important
			background-color:  var(--title_BackgroundColor)                            !important
			color:             var(--title_ForegroundColor)                            !important
			box-shadow:
				calc(0px - var(--title_BorderWidth)) 0 0 0 var(--title_BorderAccentColor),
				inset var(--title_BorderAccentWidth) 0 0 0 var(--title_BorderAccentColor),
				0 0 0 var(--title_BorderWidth) var(--title_BorderColor)                     !important

		//###  Header  ###//
		.kt-task-header
			display:  none  !important


//############################//
//###  CardFace.CheckList  ###//
//############################//

kt-board

	//###  Item  ###//
	.kt-interactive_checklists-checklist li label
		margin-right:  13px  !important

	//###  Item.URL  ###//
	kt-task > .kt-task-footer > ul > li > label > a
		color:        #444  !important
		font-weight:  bold  !important


//#############################//
//###  KanbanTool - Layout  ###//
//#############################//

:root
	--KanbanToolOffsets_NavHeight:   0px
	--KanbanToolOffsets_TopHeight:   0px
	--KanbanToolOffsets_LeftWidth:   0px
	--KanbanToolOffsets_RightWidth:  0px
	--KanbanToolOffsets_TopOffset:   0px

nav.navbar
	margin-top:   var(--KanbanToolOffsets_TopHeight)                                                       !important
	margin-left:  var(--KanbanToolOffsets_LeftWidth)                                                       !important
	width:        calc(100% - (var(--KanbanToolOffsets_LeftWidth) + var(--KanbanToolOffsets_RightWidth)))  !important

.kt-side-panel-slide

	kt-board
		margin-top:     var(--KanbanToolOffsets_TopOffset             )  !important
		margin-bottom:  calc(var(--KanbanToolOffsets_TopOffset) + 17px)  !important
		margin-left:    var(--KanbanToolOffsets_LeftWidth             )  !important
		margin-right:   var(--KanbanToolOffsets_RightWidth            )  !important

	.kt-extensions-swimlane_labels
		left:  var(--KanbanToolOffsets_LeftWidth )  !important

.kt-hint-labels-container
	top:  calc(var(--KanbanToolOffsets_TopHeight) - 8px)  !important


//############################//
//###  KanbanTool - Style  ###//
//############################//

nav.navbar > .navbar-inner
	background-color:  rgba(243, 243, 244, 1)  !important

.kt-hint-labels-container.kt-hint-label
	background-color:  #F9F9F9         !important
	border:            solid #DDD 1px  !important

.kt-extensions-swimlane_labels._swimlane_label
	margin:            0               !important
	background-color:  #F9F9F9         !important
	border:            solid #DDD 1px  !important
	border-top:        none            !important
	&:first-child
		border-top:  solid #DDD 1px  !important
