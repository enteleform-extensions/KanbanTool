//##############//
//###  Core  ###//
//##############//

.{container}

	--BorderColor:         #ABABB1
	--ExpandButton_Color:  #6A6A6A

	display:         flex
	flex-direction:  column
	position:        fixed
	top:             0
	left:            0
	width:           100%
	height:          100%
	z-index:         1000
	pointer-events:  none

	.left, .right, .top, .bottom
		display:         flex
		pointer-events:  auto
		background:      #C6C6CC

	.left
		border-right:   1px solid var(--BorderColor)
	.right
		border-left:    1px solid var(--BorderColor)
	.top
		border-bottom:  1px solid var(--BorderColor)
	.bottom
		border-top:     1px solid var(--BorderColor)

	.center
		display:          flex
		justify-content:  space-between
		flex-direction:   row
		flex-grow:        1

		.left, .right
			display:          flex
			flex-direction:   row

			.column
				display:         flex
				flex-direction:  column

				.cell
					text-align:  left

	.top, .bottom
		display:         flex
		flex-direction:  column

		.row
			display:          flex
			flex-direction:   row
			justify-content:  center
			margin:           auto

			.cell
				text-align:   center
				white-space:  nowrap

			&.stretch
				margin:  0

				.cell
					flex:  1

	.cell
		flex:         0
		min-width:    fit-content
		min-height:   fit-content
		padding:      5px
		overflow:     hidden
		cursor:       pointer
		border:       1px solid var(--BorderColor)
		background:   #D9D9DE
		color:        #505052

//##########################//
//###  Collapse Toggles  ###//
//##########################//

.{container}

	.left, .right, .top, .bottom
		&.empty,
		&.collapsed > :not(.expand-button),
		&:not(.collapsed) > .expand-button
			display:  none

	.left, .right
		.column.expand-button > .cell
			display:          flex
			flex:             1
			flex-direction:   column
			justify-content:  center
			padding:          0 2px 0 1px
			font-size:        15pt
			color:            var(--ExpandButton_Color)

	.top, .bottom
		.row.expand-button > .cell
			padding:      0 0 2px 0
			line-height:  18px
			font-size:    14pt
			color:        var(--ExpandButton_Color)


