  "dependencies": {
    "jquery":     "^3.3.1",
    "hotkeys-js": "^3.6.2"
  },

  "devDependencies": {
    "@types/node": "^11.13.0",
    "ts-node":     "^8.0.3",
    "typescript":  "^3.4.1",
    "pug":         "^2.0.3",
		"stylus":      "^0.54.5",

    "@types/webpack":                 "^4.4.27",
    "webpack":                        "^4.29.6",
    "webpack-cli":                    "^3.3.0",
    "@types/webpack-dev-server":      "^3.1.5",
    "webpack-dev-server":             "^3.2.1",
    "@types/clean-webpack-plugin":    "^0.1.3",
    "clean-webpack-plugin":           "^2.0.1",
    "@types/html-webpack-plugin":     "^3.2.0",
    "html-webpack-plugin":            "^3.2.0",
		"@types/copy-webpack-plugin":     "^4.4.3",
		"copy-webpack-plugin":            "^5.0.2",
		"@types/mini-css-extract-plugin": "^0.2.0",
		"mini-css-extract-plugin":        "^0.5.0",

    "css-loader":    "^2.1.1",
		"file-loader":   "^3.0.1",
    "pug-loader":    "^2.4.0",
		"style-loader":  "^0.23.1",
		"stylus-loader": "^3.0.2",
    "ts-loader":     "^5.3.3",

    "npm-run-all":       "^4.1.5",
    "cpy-cli":           "^2.0.0",
    "del-cli":           "^1.1.0",
    "make-dir-cli":      "^2.0.0",

		"@types/klaw-sync" : "^6.0.0",
		"klaw-sync":         "^6.0.0",

    "@types/jest": "^24.0.11",
    "jest":        "^24.7.0",
    "ts-jest":     "^24.0.1",

    "@types/jquery": "^3.3.29",

		"@types/escape-string-regexp": "^1.0.0",
		"escape-string-regexp":        "^1.0.5"
  },

  "scripts": {
		"build:local": "webpack --config ./.config/webpack/Production/__main__.ts",

		"build:push":   "npm-run-all build:push:*",
    "build:push:1": "npm run build:local",
    "build:push:2": "npm run github:push",

    "github:push": "npm-run-all github:push:*",

    "github:push:source":   "npm-run-all github:push:source:*",
    "github:push:source:1": "git add --all",
    "github:push:source:2": "git commit --all --message \"..\"",
    "github:push:source:3": "git push",

    "github:pull:source":   "git pull",

    "github:push:gh-pages":   "npm-run-all github:push:gh-pages:*",
    "github:push:gh-pages:1": "git -C ./__dist__ add --all",
    "github:push:gh-pages:2": "git -C ./__dist__ commit --all --message \"..\"",
    "github:push:gh-pages:3": "git -C ./__dist__ push",

    "github:pull:gh-pages":   "git -C ./__dist__ pull",

    "install-dependencies": "yarn install",

    "test":          "cls && jest",
    "test:coverage": "cls && jest --coverage"
  }
}
